<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#ffffff"
        />

    <TextView
        android:id="@+id/actionbar_help"
        android:layout_width="254dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="Sign-up"
        android:textColor="@color/red"
        android:textSize="40sp"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_below="@id/actionbar_help"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_marginTop="10dp"

        android:scrollbarAlwaysDrawVerticalTrack="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:background="@color/background">


        <TextView
            android:id="@+id/firstName"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_above="@+id/firstName_txt"
            android:layout_alignLeft="@id/firstName_txt"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:text="First Name:"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/firstName_txt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_above="@+id/lastName"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:background="#11000000"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/lastName"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_above="@+id/lastName_txt"
            android:layout_alignLeft="@id/lastName_txt"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="5dp"
            android:text="Last Name:"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/lastName_txt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_above="@+id/Username"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="15dp"
            android:background="#11000000"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="16dp" />

            <TextView
            android:id="@+id/Password"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_above="@+id/Password_txt"
            android:layout_alignLeft="@id/Password_txt"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="5dp"
            android:text="Password:"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/Password_txt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_above="@+id/confirmPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="15dp"
            android:background="#11000000"
            android:ems="10"
            android:inputType="textPassword"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/confirmPassword"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_above="@+id/confirmPassword_txt"
            android:layout_alignLeft="@id/confirmPassword_txt"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="5dp"
            android:text="Confirm Password:"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/confirmPassword_txt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_above="@+id/email"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="15dp"
            android:background="#11000000"
            android:ems="10"
            android:inputType="textPassword"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/email"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_above="@+id/email_txt"
            android:layout_alignLeft="@id/email_txt"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="5dp"
            android:text="Email:"
            android:textColor="@color/black"
            android:textSize="16dp" />

            <EditText
                android:id="@+id/email_txt"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_above="@+id/button_done"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="25dp"
                android:background="#11000000"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:textSize="16dp" />

        <Button
            android:id="@+id/button_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Done" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
